<div id ="mycard">
	<div class="demo-card-wide mdl-card mdl-shadow--2dp">
	  <div class="mdl-card__title">
	    <h2 class="mdl-card__title-text">Login</h2>
	  </div>
	  <div class="mdl-card__supporting-text">
    	<form {{action 'authenticate' email password on='submit'}}>
    		{{#if errorMessage}}
    		  <p class="error">{{errorMessage}}</p>
    		{{/if}}
      	<div id="name">
          <div class="mdl-textfield mdl-js-textfield">
            {{input class="mdl-textfield__input" value=email type="email" id="email"}}
            <label class="mdl-textfield__label" for="email">Email</label>
            <span class="mdl-textfield__error">Enter a valid email!</span>
          </div>
          <div class="mdl-textfield mdl-js-textfield">
    				{{input id='password' type='password' value=password class="mdl-textfield__input"}}
    				<label class="mdl-textfield__label" for="password">Password</label>
  				</div>
      	</div><br/><br/>
  			<button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">Login</button>
			</form>
  	</div>
  </div>
</div>